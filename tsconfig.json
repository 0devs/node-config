{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./lib",
        "allowJs": true,
        "target": "es5",
        "lib": [ "es2015" ],
        "strict": true,
        "strictNullChecks": true,
        "inlineSourceMap": true,
        "baseUrl": ".",
        "paths": {
          "@/*": ["./src/*"]
        },
        "experimentalDecorators": false,
        "emitDecoratorMetadata": false,
        "types": ["node", "jest"],
        "downlevelIteration": true
    },
    "include": [
      "./src/**/*"
    ],
    "_exclude": [
      "./src/spec/**/*"
    ]
}
